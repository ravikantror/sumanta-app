 <div  class="container">
<h1>New Post</h1>
<%= form_for @article, method: :post,:remote => true do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 <div class="row">
	 <div class="col-sm-1">
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 </div>
 <div class="col-sm-2">
  <p>
    <%= f.label :des %><br>
    <%= f.text_area :des %>
  </p>
</div>
 <div class="col-sm-3">
  <p> 
  	<%= f.label :post_type %><br><br>
   <%= f.select :post_type, [['Public','1'],['Friend','2'],['Private','3']] %>
  </p>
 </div>
 <div class="col-sm-4">
  <p>
    <%= f.submit %>
  </p>
</div>
 </div>
<%end%>

 </div>
