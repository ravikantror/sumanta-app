
<h1>New Post</h1>
<%= form_for @article, method: :post,:remote => true do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
 
  <p>
    <%= f.label :des %><br>
    <%= f.text_area :des %>
  </p>
    <p>
   <%= f.select :post_type, [['Public','1'],['Friend','2'],['Private','3']] %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
 
<%end%>
 
