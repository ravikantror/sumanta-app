 <div  class="container">
<h1>New Post</h1>
<%= form_for @article, method: :post,:remote => true do |f| %>
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %> prohibited
        this article from being saved:
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
 <div class="row">
	 <div class="col-sm-1">
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name ,  :id => 'txttittle'%>
  </p>
 </div>
 <div class="col-sm-2">
  <p>
    <%= f.label :des %><br>
    <%= f.text_area :des , :id => 'txtarea'%>
  </p>
</div>
 <div class="col-sm-3">
  <p> 
  	<%= f.label :post_type %><br><br>
   <%= f.select :post_type, [['Public','1'],['Friend','2'],['Private','3']] %>
  </p>
 </div>
 <div class="col-sm-4">
  <p>
    <%= f.submit :id => "btnsubmit" %>
  </p>
</div>
 </div>
<%end%>

 </div>
<%#= link_to "Back", articles_path %>
<%#= link_to "Home", home_path %>
<%#= link_to "All User Post", articles_path %>

<script type="text/javascript">
  $(document).ready(function(){
      $("#btnsubmit").click(function(){
        if($("#txttittle").val() == "")
        {
          alert("Enter Name");
          $("#txttittle").focus();
          return false;
        }
        else if($("#txtarea").val() == "")
        {
          alert("Enter Description");
          $("#txtarea").focus();
          return false;
        }
      });
  })
</script> 


